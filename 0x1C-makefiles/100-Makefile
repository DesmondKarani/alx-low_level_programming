CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@

# Implicit rule for object files
.c.o:
	$(CC) -c $< -o $@

clean:
	/bin/rm -f *~ $(NAME)

oclean:
	/bin/rm -f $(OBJ)

fclean: clean oclean

re: fclean all
